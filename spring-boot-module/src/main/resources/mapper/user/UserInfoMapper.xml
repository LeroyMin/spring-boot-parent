<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.weizhis.module.user.dao.UserInfoDao">
    <resultMap type="cn.weizhis.module.user.entity.UserInfo" id="resultType">
        <id property="id" column="id"/>
        <result property="no" column="no"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="rId" column="rid"/>
        <result property="rName" column="rname"/>
        <result property="email" column="email"/>
        <result property="mobile" column="mobile"/>
        <result property="loginIp" column="login_ip"/>
        <result property="loginDate" column="login_date"/>
        <result property="lastLoginIp" column="last_login_ip"/>
        <result property="lastLoginDate" column="last_login_date"/>
        <result property="creator" column="creator"/>
        <result property="createDate" column="create_date"/>
        <result property="updater" column="updater"/>
        <result property="updateDate" column="update_date"/>
        <result property="status" column="status"/>
    </resultMap>
    <select id="selectOne" parameterType="cn.weizhis.module.user.entity.UserInfo" resultType="cn.weizhis.module.user.entity.UserInfo">
        select * from sys_user where id=#{id}
    </select>
    
    <select id="selectUserByName" parameterType="cn.weizhis.module.user.entity.UserInfo" resultType="cn.weizhis.module.user.entity.UserInfo">
        select * from sys_user where name=#{name}
    </select>

    <!--<select id="selectAllByPage" parameterType="cn.weizhis.common.component.Page" resultType="cn.weizhis.common.component.Page">-->
        <!--select * from sys_user limit #{currentPage-1},#{rowNum}-->
    <!--</select>-->

    <insert id="insert" parameterType="cn.weizhis.module.user.entity.UserInfo">
        insert into sys_user (name,no,password,salt,rid,rname,email,mobile,creator,create_date,status)
        values
         (#{name},#{no},#{password},#{salt},#{rId},#{rName},#{email},#{mobile},#{creator},#{createDate},#{status})
    </insert>

    <update id="update" parameterType="cn.weizhis.module.user.entity.UserInfo">
        update sys_user set name = #{name},passwords = #{passwords},salt = #{salt},state=#{state},user_name=#{user_name}
        where id=#{id}
    </update>

    <delete id="delete" parameterType="cn.weizhis.module.user.entity.UserInfo">
        delete sys_user where id = #{id}
    </delete>
</mapper>